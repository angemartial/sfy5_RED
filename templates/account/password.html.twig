{% extends 'base.html.twig' %}

{% block title %}Mon compte - RED{% endblock %}

{% block stylesheet %}

{% endblock %}

{% block content %}

    <div class="page-title">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <h3>Modifier mot de passe</h3>
                            <ul>
                                <li><a href="{{ path ('account') }}">Mon compte</a></li>
                                <li>/</li>
                                <li>Mot de passe</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if notification  %}
        <div class="alert alert-info">{{ notification }}</div>
    {% endif %}


    <section class="contact-area contact-style-two ptb-80">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="row">
                        <div class="col-lg-12 col-md-6 col-sm-6">
                            <div class="section-title">
                                <h3>Membre</h3>
                                <h2>{{ app.user.firstname}}<span> {{ app.user.lastname}}</span></h2>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="contact-form">
                        <form id="contactForm">
                            <div class="row">
                                {{ form_start(form) }}
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group">

                                        {{ form_row(form.firstname) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group">
                                        {{ form_row(form.lastname) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group">
                                        {{ form_row(form.old_password) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group">
                                       {{ form_row(form.new_password) }}
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                {{ form_end(form) }}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>



{% endblock %}

{% block javascript %}

{% endblock %}