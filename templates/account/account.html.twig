{% extends 'base.html.twig' %}

{% block title %}Mon compte - RED{% endblock %}

{% block stylesheet %}

{% endblock %}

{% block content %}

    <div class="page-title">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <h3>Mon compte</h3>
                            <ul>
                                <li><a href="{{ path ('homepage') }}">Accueil</a></li>
                                <li>/</li>
                                <li>Mon compte</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="contact-area contact-style-two ptb-80">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="row">
                        <div class="col-lg-9 col-md-6 col-sm-6">
                            <div class="section-title">
                                <h3>Membre</h3>
                                <h2>{{ app.user.firstname}}<span> {{ app.user.lastname}}</span></h2>
                            </div>
                        </div>
                        {% if is_granted('ROLE_ADMIN') %}
                        <div class="col-lg-3 col-md-6 col-sm-6">
                            <div class="section-title">
                                <a href="{{ path ('admin') }}"><h3>Tableau de bord RED</h3></a>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="contact-form">
                        <form id="contactForm">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <lable for="cname">Nom</lable>
                                        <input type="text" class="form-control" value="{{ app.user.firstname }}" disabled>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <lable for="cname">Pr√©noms</lable>
                                        <input type="text" class="form-control" value="{{ app.user.lastname }}" disabled>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <lable for="cname">Email</lable>
                                        <input type="text" class="form-control" value="{{ app.user.email }}" disabled>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <lable for="cname">Description</lable>
                                        <textarea name="message" class="form-control" value="{{ app.user.description }}" disabled></textarea>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="mt-3">
                                        <a href="#" class="btn btn-primary mr-2 mb-2" disabled="disabled">
                                            modifier vos informations
                                        </a>
                                        <a href="{{ path('account_password') }}" class="btn btn-primary mr-2 mb-2">
                                            changer de mot de passe
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}

