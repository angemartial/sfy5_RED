                        {#<li class="page-item">#}
                        {#<a class="page-link" href="#"><i class="fa fa-angle-right"></i></a>#}
                        {#</li>#}
                        {#</ul>#}
                        {#</nav>#}
                        {#</div>#}
                        {#</div>#}
                    </div>
                </div>
                <!-- blog widget -->
{#                {% include '/partials/_blogWidget.html.twig' %}#}
                <!-- end blog widget -->
            </div>
        </div>
    </section>
    <!-- End Blog Area -->
{% endblock %}
