    <!-- Start Lawyer Boxes Area -->
    <section class="lawyer-boxes">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="box bg-1">
                        <i class="fa fa-pencil-square-o"></i>
                        <h3>RESEAU</h3>
                        <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="box bg-2">
                        <i class="fa fa-gavel"></i>
                        <h3>EDIFICATION</h3>
                        <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="box bg-3">
                        <i class="fa fa-search-plus"></i>
                        <h3>DEVELOPPEMNT</h3>
                        <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Lawyer Boxes Area -->

    <!-- Start Blog Area -->
    <section class="blog-area ptb-80">
        <div class="container">
            <div class="section-title">
                <h2>N<span>ews</span></h2>
            </div>
            <div class="row">
                <div class="blog-slider">
                    {% for actuality in actualityArticles %}
                        {% set url = path ('article_show', {'slug': actuality.slug}) %}
                    <div class="col-lg-12">
                        <div class="single-blog-post">
                            <div class="thumb">
                                <img src="uploads/{{ actuality.illustration }}" alt="blog-img">
                                <div class="blog-link">
                                    <a href="{{ url }}"><i class="fa fa-link"></i></a>
                                </div>
                                <div class="date">
                                    <span>{{ actuality.publishedAt|date('d M Y') }} </span>
                                </div>
                            </div>
                            <div class="post-content">
                                <h3><a href="{{ url }}">{{ actuality.title }}</a></h3>
                                <p>{{ actuality.introduction|striptags|u.truncate(100,'...', false)|raw}}</p>
                            </div>
                            <div class="post-meta">
                                <ul>
                                    <li><a href="#"><i class="fa fa-user"></i> {{ actuality.user.firstname|u.title(true) }}</a></li>
                                    {#<li><a href="#"><i class="fa fa-heart-o"></i> 301</a></li>#}
                                    {#<li><a href="#"><i class="fa fa-comments-o"></i> 31</a></li>#}
                                </ul>
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </section>
    <!-- End Blog Area -->

    <section class="practice-area practice-style-two ptb-70">
        <div class="container">
            <div class="section-title">

                <h2><span>Articles </span> Droit & Economie</h2>
            </div>
        </div>
        <div class="row m-0">

{% for articles in articlesArticles %}
            <div class="col-lg-3 col-md-6 col-sm-6 p-0">
            
                <div class="practice-box">
                    <div class="thumb">
                        <img src="/uploads/{{ articles.illustration }}" alt="practice-img">
                        <div class="practice-link">
                            <a href="{{ path ('article_show', {'slug': articles.slug}) }}"><i class="fa fa-link"></i></a>
                        </div>
                    </div>
                    <div class="practice-text">
                        <h3><a href="{{ path ('article_show', {'slug': articles.slug}) }}">{{ articles.title|striptags }}</a></h3>
                        <p>{{ articles.introduction|striptags|u.truncate(100,'...', false)|raw }}</p>
                    </div>
                </div>
            </div>
{% endfor %}

            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="browse-all-btn">
                    <a href="{{ path ('article_index') }}" class="btn btn-primary">Tous voir</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Start Services Area -->
    <section class="services-area ptb-80">
        <div class="container">
            <div class="section-title">
                <h2>Base de <span>Données</span></h2>
            </div>
            <div class="row">

{% for data in database%}
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="services-box">
                        <div class="icon">
                            <i class="fa fa-gavel"></i>
                        </div>
                        <div class="services-text">
                            <h3><a href="{{ path ('article_show', {'slug': data.slug}) }}">{{ data.title }}</a></h3>
                            <p>{{ data.introduction }}</p>
                        </div>
                    </div>
                </div>
{% endfor %}

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="browse-all-btn">
                        <a href="{{ path ('methodology_index') }}" class="btn btn-primary">Tous voir</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Services Area Area -->

    <!-- Start Practice Area -->
    <section class="practice-area ptb-80">
        <div class="container">
            <div class="section-title">
                <h2><span>Répères </span> Méthologiques</h2>
            </div>
            <div class="row">
                {% for method in method %}
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="practice-box">
                        <div class="thumb">
                            <img src="uploads/{{ method.illustration }}" alt="practice-img">
                            <div class="practice-link">
                                <a href="{{ path ('article_show',{'slug': method.slug}) }}"><i class="fa fa-link"></i></a>
                            </div>
                        </div>
                        <div class="practice-text">
                            <h3><a href="{{ path ('article_show',{'slug': method.slug}) }}">{{ method.title }}</a></h3>
                            <p>{{ method.introduction }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="browse-all-btn">
                        <a href="{{ path ('methodology_index') }}" class="btn btn-primary">Tous voir</a>
                    </div>
                </div>
            </div>
        </div>
