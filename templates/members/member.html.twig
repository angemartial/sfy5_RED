{% extends 'base.html.twig' %}

{% block title %} Membres du RED {% endblock %}

{% block content %}

    <!-- Start Page Title Area -->
    <div class="page-title">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <h3>Membres du RED</h3>
                            <ul>
                                <li><a href="{{ path ('homepage') }}">Accueil</a></li>
                                <li>/</li>
                                <li>Membres du RED</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->

    <!-- Start Attorneys Area -->
    <section class="attorneys-area attorneys-style-two ptb-80">
        <div class="container">
            <div class="row">
                {% for member in members %}
                    {% set url = path ('member_show', {'slug': member.slug}) %}
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="single-attorney">
                        <div class="pic">
                            <img src="uploads/{{ member.illustration }}" alt="attorneys-img">
                        </div>
                        <div class="attorney-content">
                            <h3 class="title"><a href="{{ url }}">{{ member.lastname }} {{ member.firstname }}</a></h3>
                            <span class="post">{{ member.fonction }}</span>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- End Attorneys Area -->

{% endblock %}
