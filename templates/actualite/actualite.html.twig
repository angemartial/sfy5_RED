{% extends 'base.html.twig' %}

{% block title %} Actualités {% endblock %}

{% block content %}

    <!-- Start Page Title Area -->
    <div class="page-title">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <h3>Actualités</h3>
                            <ul>
                                <li><a href="#">Accueil</a></li>
                                <li>/</li>
                                <li>Actualités</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->

    <section class="blog-area blog-style-one ptb-80">
        <div class="container">
            <div class="row">
                {% for actualites in actualites %}
                    {% set url = path ('article_show', {'slug': actualites.slug}) %}
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="single-blog-post">
                            <div class="thumb">
                                <img src="/uploads/{{ actualites.illustration }}" alt="{{ actualites.title }}">
                                <div class="blog-link">
                                    <a href="{{ url }}"><i class="fa fa-link"></i></a>
                                </div>
                                <div class="date">
                                    <span>10 déc<br>2020</span>
                                </div>
                            </div>
                            <div class="post-content">
                                <h3><a href="{{ url }}">{{actualites.title}}</a></h3>
                                <p>{{ actualites.introduction |raw}}</p>
                            </div>
                            <div class="post-meta">
                                <ul>
                                    <li><a href="#"><i class="fa fa-user"></i> Admin</a></li>
                                    {#<li><a href="#"><i class="fa fa-heart-o"></i> 301</a></li>#}
                                    {#<li><a href="#"><i class="fa fa-comments-o"></i> 31</a></li>#}
                                </ul>
                            </div>
                        </div>
                    </div>
                {% endfor %}

