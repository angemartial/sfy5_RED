{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block content %}

    <!-- Start Login Area -->
    <section class="login-area ptb-80">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="login-content">
                        <h3>Mot de passe oublié</h3>
                        {% for message in app.flashes ('notice') %}
                            <div class="alert alert-info">{{ message }}</div>
                        {% endfor %}

                        <form method="post">

                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <input type="email" value="" name="email" id="inputEmail" class="form-control" required autofocus placeholder="Entrez votre email">
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <button class="btn btn-lg btn-primary" type="submit">
                                        Réinitialiser mot de passe
                                    </button>
                                </div>
                            </div>
                        </form>
                        <h4>Où vous souhaitez-vous <a href="{{ path ('app_login') }}">Vous connectez ?</a></h4>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Login Area -->
{% endblock %}

