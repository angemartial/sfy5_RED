    <!-- Start Login Area -->
    <section class="login-area ptb-80">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="login-content">
                        <h3>Connectez vous !</h3>
                       {% for message in app.flashes ('notice') %}
                        <div class="alert alert-info">{{ message }}</div>
                        {% endfor %}

                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus placeholder="Entrez votre email">
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Entrez un mot de passe" required>
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"
                                        >
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <button class="btn btn-lg btn-primary" type="submit">
                                        Se connecter
                                    </button>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <p><a href="{{ path ('reset_password') }}">Nom utilisateur / Mot de passe oublié</a></p>
                                </div>
                            </div>
                        </form>
                        <h4>Pas encore inscrit? <a href="{{ path ('register') }}">Créer un compte</a></h4>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Login Area -->




